           // console.log(item.nome);
           // console.log(item.microrregiao.mesorregiao.UF.nome);
            });
            console.log("TOTALLL: ",data.length)
            
        })
        .catch(error => {
            // Trate os erros aqui
            console.error('Erro na requisição:', error);
        });

    }
     

